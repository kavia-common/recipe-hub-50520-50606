# Database connection string (SQLAlchemy URL)
# Example for PostgreSQL:
# postgresql+psycopg2://<user>:<password>@<host>:<port>/<db>
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/recipehub

# JWT configuration
JWT_SECRET=CHANGE_ME_IN_PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS configuration (comma-separated list of origins; leave empty to allow all in dev)
CORS_ALLOW_ORIGINS=http://localhost:3000
